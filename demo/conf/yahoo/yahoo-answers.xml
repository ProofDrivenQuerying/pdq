<service>
	<name>Yahoo Answers</name>
	<documentation>http://developer.yahoo.com/answers/</documentation>
	<usage-limits>
		<pricing>free</pricing>
		<frequency max="20000" period="1h"/>
		<api-key required="true"/>
	</usage-limits>
	<protocol type="REST" baseurl="http://answers.yahooapis.com/AnswersService/V1/questionSearch?" output="rss">
		<input-params>
			<param name="appid"         type="string"  required="true"/> 
			<param name="query"         type="string"  required="true"/>
			<param name="search_in"     type="enum"    required="false" values="all|question|best_answer"/>
			<param name="category_id"   type="integer" required="false"/>
			<param name="category_name" type="string"  required="false"/>
			<param name="region"        type="enum"    required="false" values="us|uk|...|fr|sg"/>
			<param name="date_range"    type="enum"    required="false" values="all|7|7-30|30-60|60-90|more90"/>
			<param name="sort"          type="enum"    required="false" values="relevance|date_desc|date_asc"/>
			<param name="type"          type="enum"    required="false" values="all|resolved|open|undecided"/>
			<param name="start"         type="integer" required="false"/>
			<param name="results"       type="integer" required="false"/>
			<param name="output"        type="enum"    required="false" values="xml|json|rss|php"/>
			<param name="callback"      type="string"  required="false"/>
		</input-params>
		<output-params ref="http://answers.yahooapis.com/AnswersService/V1/QuestionResponse.xsd"/>
	</protocol>
</service>