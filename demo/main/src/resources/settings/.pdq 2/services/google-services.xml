		<attribute name="timeZoneId"    type="java.lang.String"  path="timeZoneId"/>
		<attribute name="timeZoneName"  type="java.lang.String"  path="timeZoneName"/>

		<access-method type="LIMITED" name="g_timezone" inputs="1,2,3"   cost="1.0" />
