#!/bin/bash

#
# ARG1: location of the project folder (where the JAR files are stored)
# ARG2: location of the test case to run
#


source cluster-settings

typeset -i i=0

# Sending out the jar files to all instances
for instance in ${instances[@]};
do hostname="${prefix}${instances[${i}]}${suffix}"
   echo "Status on " $hostname
   ssh ${keypair} ${hostname} killall recursive-run 
   ssh ${keypair} ${hostname} killall -9 java 
   i+=1
done

