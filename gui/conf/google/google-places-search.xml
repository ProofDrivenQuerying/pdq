<service>
	<name>Google Places Search</name>
	<documentation>https://developers.google.com/places/documentation/search</documentation>
	<usage-limits>
		<!-- 
		<pricing>free</pricing>
		<frequency max="2500" period="24h"/>
		 -->
		<api-key required="true"/>
	</usage-limits>
	<protocol type="REST" baseurl="https://maps.googleapis.com/maps/api/place/nearbysearch/json?">
		<input-params>
			<param name="query"         type="string"  required="true"/>
			<param name="key"           type="string"  required="true"/>
			<param name="sensor"        type="boolean" required="true"/>
			<param name="location"      type="coords"  required="false"/>
			<param name="radius"        type="integer" required="false"/>
			<param name="minprice"      type="double"  required="false" />
			<param name="maxprice"      type="double"  required="false" />
			<param name="opennow"       type="boolean" required="false" />
			<param name="types"         type="enum"    required="false" values="" />
			<!-- types available at https://developers.google.com/places/documentation/supported_types -->
			<param name="zagatselected" type="boolean" required="false"/>
		</input-params>
		<output-params>
			<result-path single="/result" multiple="/results[]"/>
			<param name="geometry"    type="coord(/lat,/lng)"/>
			<param name="icon"        type="url"/>
			<param name="id"          type="string"/>
			<param name="name"        type="string"/>
			<param name="open_hour"   type="complex"/>
			<param name="photos"      type="complex_array"/>
			<param name="price_level" type="integer"/>
			<param name="reference"   type="string"/>
			<param name="types"       type="string_array"/>
			<param name="vicinity"    type="string"/>
		</output-params>
	</protocol>
	<protocol type="REST" baseurl="https://maps.googleapis.com/maps/api/place/radarsearch/json?">
		<input-params>
			<param name="location"      type="coord"   required="true"/>
			<param name="radius"        type="integer" required="true"/>
			<param name="key"           type="string"  required="true"/>
			<param name="sensor"        type="boolean" required="true"/>
			
			<param name="keywords"      type="string"  required="false"/>
			<param name="minprice"      type="double"  required="false" />
			<param name="maxprice"      type="double"  required="false" />
			<param name="name"          type="string"  required="false" />
			<param name="opennow"       type="boolean" required="false" />
			<param name="types"         type="enum"    required="false" values="" />
			<!-- types available at https://developers.google.com/places/documentation/supported_types -->
			<param name="zagatselected" type="boolean" required="false"/>
		</input-params>
		<output-params>
			<result-path single="/result" multiple="/results[]"/>
			<param name="geometry"    type="coord(/lat,/lng)"/>
			<param name="icon"        type="url"/>
			<param name="id"          type="string"/>
			<param name="name"        type="string"/>
			<param name="open_hour"   type="complex"/>
			<param name="photos"      type="complex_array"/>
			<param name="price_level" type="integer"/>
			<param name="reference"   type="string"/>
			<param name="types"       type="string_array"/>
			<param name="vicinity"    type="string"/>
		</output-params>
	</protocol>
</service>