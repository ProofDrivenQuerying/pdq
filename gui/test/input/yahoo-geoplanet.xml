<!-- TODO: separate these services in independent files -->
<services name="Yahoo GeoPlanet">
	<usage-policies>
		<policy name="2000_request_per_day"
				type="uk.ac.ox.cs.pdq.services.policies.RequestFrequencyLimit"
				limit="2000" period="24h"/>
<!-- 
		<pricing>free</pricing>
 -->
	</usage-policies>
	<input-methods>
		<input-method name="appid"    type="url-param"    value="JzP8IhLV34FYtPGFngow9GLtYgdmoXAFCyjNOAPiry1mGIdTpk40H_kJCUzXGBs-" />
		<input-method name="format"   type="url-param"    value="json"/>
		<input-method name="keywords" type="path-element" template=".q('{1}')"/>
		<input-method name="woeid"    type="path-element" template=".woeid('{1}')" batch=","/>
		<input-method name="type"     type="path-element" template=".type('{1}')"/>
	</input-methods>
	<service
		name="Yahoo Places"
		protocol="REST"
		url="http://where.yahooapis.com/v1/places" 
		documentation="http://developer.yahoo.com/geo/geoplanet/"
		result-delimiter="places/place">

		<static-input name="appid"  type="java.lang.String" input-method="appid"/> 
		<static-input name="format" type="java.lang.String" input-method="format"/>

<!-- 
		<input name="lang"     type="java.lang.String" />
		<input name="callback" type="java.lang.String" />
		<input name="view"     type="java.lang.String"  range="short|long"/>
		<input name="select"   type="java.lang.String"  range="short|long"/>
 -->

		<attribute name="keywords" type="java.lang.String"  input-method="keywords.1"/>
		<attribute name="woeid"    type="java.lang.Integer" input-method="woeid.1" path="woeid"/>
		<attribute name="type"     type="java.lang.Integer" input-method="type.1"/>

		<attribute name="placeTypeName"      type="java.lang.String" path="placeTypeName"/>
		<attribute name="name"               type="java.lang.String" path="name"/>
		<attribute name="country"            type="java.lang.String" path="country"/>
		<attribute name="admin1"             type="java.lang.String" path="admin1"/>
		<attribute name="admin2"             type="java.lang.String" path="admin2"/>
		<attribute name="admin3"             type="java.lang.String" path="admin3"/>
		<attribute name="locality1"          type="java.lang.String" path="locality1"/>
		<attribute name="locality2"          type="java.lang.String" path="locality2"/>
		<attribute name="postal"             type="java.lang.String" path="postal"/>
		<attribute name="centroid_latitude"  type="java.lang.Double" path="centroid/latitude"/>
		<attribute name="centroid_longitude" type="java.lang.Double" path="centroid/longitude"/>
		
		<!-- <output name="boundingBox"         type="uk.ac.ox.cs.pdq.type.GeoBoundingBox"/> -->
		<attribute name="timezone"      type="java.lang.String"  path="timezone"/>

		<access-method type="LIMITED" name="yh_geo_keyword" inputs="1" cost="1.0" />
		<access-method type="LIMITED" name="yh_geo_woeid"   inputs="2" cost="1.0" />
		<access-method type="LIMITED" name="yh_geo_type"    inputs="3" cost="1.0" />
	</service>
</services>