<service>
	<name>Yahoo Weather</name>
	<documentation>http://developer.yahoo.com/weather/</documentation>
	<usage-limits>
		<pricing>free</pricing>
		<api-key required="false" type="URL"/>
	</usage-limits>
	<protocol type="REST" baseurl="http://weather.yahooapis.com/forecastrss?" output="xml">
		<input-params>
			<param name="w" type="string" required="true"/> <!-- WOEID -->
			<param name="u" type="enum"   required="true" values="c|f"/> <!-- Units in celsius (c) or farenheit (f) -->
		</input-params>
		<output-params>
			<result-path single="/rss/channel/item" multiple="/rss/channel/item"/>
			<param name="title"               type="string"/>
			<param name="link"                type="string"/>
			<param name="language"            type="string"/>
			<param name="description"         type="string"/>
			<param name="lastBuiltDate"       type="date"/>
			<param name="ttl"                 type="integer"/>
			<param name="yweather:location"   type="complex"/>
			<param name="yweather:units"      type="complex"/>
			<param name="yweather:wind"       type="complex"/>
			<param name="yweather:atmosphere" type="complex"/>
			<param name="yweather:astronomy"  type="complex"/>
			<param name="image"               type="complex">
				<param name="title"  type="string"/>
				<param name="link"   type="string"/>
				<param name="url"    type="string"/>
				<param name="width"  type="string"/>
				<param name="height" type="string"/>
			</param>
			<param name="item"   type="complex">
				<param name="title"              type="string"/>
				<param name="link"               type="string"/>
				<param name="description"        type="string"/>
				<param name="guid"               type="string"/>
				<param name="pubDate"            type="date"/>
				<param name="geo:lat"            type="cord"/>
				<param name="geo:long"           type="coord"/>
				<param name="yweather:condition" type="int"/>
				<param name="yweather:forecast"  type="complex"/>
			</param>
			<param name="error_message" type="string"/>
		</output-params>
	</protocol>
</service>